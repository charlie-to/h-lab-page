---
export interface Props {
    name_jp: string;
    name_en: string;
    degree?: string;
    history?: {
        year: number;
        content: string[];
    }[];
    photo?: {
        src: string;
        alt: string;
    }
}

const {name_jp, name_en, degree, history, photo} = Astro.props;
---

<div class="container mx-auto p-5">
    <h1 class="text-2xl md:text-4xl font-bold">{name_jp}</h1>
    <h2 class="text-base">{name_en}</h2>
    <div class="md:flex md:space-x-3">
        {
            // photoが存在する場合のみ表示

            photo && (
                        <img src={photo.src} alt={photo.alt} class="md:w-1/3 object-contain"/>
            )
        }
        <div class="md:w-2/3">
            <p class="font-bold">{degree}</p>
            <div>
                <h3>経歴</h3>
                <ul>
                    {history?.map((item) => (
                            <li class="my-2">
                                <p class="font-semibold">{item.year}年</p>
                                <ul>
                                    {item.content.map((content) => (
                                            <li>{content}</li>
                                    ))}
                                </ul>
                            </li>
                    ))}
                </ul>
                <slot/>
            </div>
        </div>
    </div>
</div>
